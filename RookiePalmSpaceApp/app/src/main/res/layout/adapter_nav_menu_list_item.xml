<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_menu_list_item_height"
    android:orientation="horizontal"
    android:paddingRight="@dimen/nav_menu_list_item_padding_right">
    <!--android:background="@drawable/selector_nav_menu_list_item_xml"-->

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="@dimen/nav_menu_list_item_icon_width"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/nav_menu_list_item_padding_left">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_nav_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:src="@mipmap/ic_file_upload_black" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/nav_menu_list_item_padding_right">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_nav_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传文件" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>