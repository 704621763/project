<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_article_card_height"
    android:layout_marginBottom="@dimen/activity_article_card_margin"
    android:layout_marginLeft="@dimen/activity_article_card_margin"
    android:layout_marginRight="@dimen/activity_article_card_margin"
    card_view:contentPadding="@dimen/activity_article_card_padding"
    card_view:cardCornerRadius="@dimen/activity_article_card_corner_radius">


    <RelativeLayout
        android:id="@+id/rl"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="android的消息机制笔记"
            android:textColor="@color/activity_article_title_color"
            android:textSize="@dimen/activity_article_title_size" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="30分钟以前"
            android:textColor="@color/activity_article_time_color"
            android:textSize="@dimen/activity_article_time_size" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_article_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_article_title"
            android:layout_marginTop="@dimen/activity_article_view_margin_top"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="今天探讨Android中的消息机制，主要包括消息的发送、接收以及与线程之间的关系这今天探讨Android中的消息机制，主要包括消息的发送、接收以及与线程之间的关系发送、接收以及与线程之间的关系发送、接收以及与线程之间的关系发送、接收以及与线程之间的关系发送、接收以及与线程之间的关系"
            android:textColor="@color/activity_article_content_color"
            android:textSize="@dimen/activity_article_content_size" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_article_location_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_article_content"
            android:layout_marginTop="@dimen/activity_article_view_margin_top"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="搜狐媒体大厦"
            android:textColor="@color/activity_article_location_color"
            android:textSize="@dimen/activity_article_location_size" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_article_location_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_article_content"
            android:layout_marginTop="@dimen/activity_article_view_margin_top"
            android:layout_toLeftOf="@id/tv_article_location_value"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="发表于: "
            android:textColor="@color/activity_article_location_color"
            android:textSize="@dimen/activity_article_location_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_article_location_key"
            android:layout_marginTop="@dimen/activity_article_view_margin_top"
            android:visibility="gone"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_article_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_delete_black" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_article_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:alpha="0.5"
                android:src="@mipmap/ic_share_black" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>